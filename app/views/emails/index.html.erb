<div class="row ">
      <div class="col text-center">
          <%= form_tag(emails_path, method: "post", class: "btn", id: "contact-form", remote:true )  do %>
              <div class="text-center">
                  
                  <%= button_tag(type: "submit", class: "btn btn-default") do %>
                    <i class="far fa-paper-plane"></i> Recevoir un email <i class="far fa-paper-plane"></i>
                <% end %>
              </div>
          <%end%>
      </div>
  </div>
  <hr>
  <hr>
<div class="container">
  <table class="table table-bordered table-light">
    <thead class="table-dark">
      <tr>
        <th class='col-5 text-center' scope="col">Liste des emails</th>
        <th class='col-7 text-center' scope="col">Emails sélectionnés</th>
      </tr>
    </thead>
    <tbody id="list-email">
      <% @emails.each do |email| %>
        <tr id="email-list-<%=email.id%>">
          <% if email.read == false %>
            <td class="email-object-<%=email.id%> " id="email-object-<%=email.id%>">
              <%=link_to email_path(email.id), remote: true do %>
                <div class="container h-100 w-100">
                <strong><%=email.object%> <i class="far fa-envelope"></i></strong>
                </div>
              <%end%>
            </td> 
          <%else%>
            <td class="email-object-<%=email.id%> " id="email-object-<%=email.id%>">
              <%=link_to email_path(email.id), remote: true do %>
                <div class="container h-100 w-100">
                  <%=email.object%> <i class="far fa-envelope-open"></i>
                </div>
              <%end%>
            </td>
          <%end%>
          <td class="email-body-<%=email.id%>" id="email-body-<%=email.id%>"></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
<hr>
  <hr>
