<div class="row ml-3">
      <div class="offset-md-3 col-md-6 offset-md-3">
          <%= form_tag(emails_path, method: "post", class: "form", id: "contact-form", remote:true )  do %>
              <div class="text-center">
                  <%= submit_tag("Recevoir un email", class: "btn btn-start-order") %>
              </div>
          <%end%>
      </div>
  </div>
<div class="container">
  <table class="table table-bordered table-light">
    <thead class="table-dark">
      <tr>
        <th class='col-5' scope="col">Liste des emails</th>
        <th class='col-7' scope="col">Emails sélectionnés</th>
      </tr>
    </thead>
    <tbody id="list-email">
      <% @emails.each do |email| %>
        <tr id="email-list-<%=email.id%>">
          <% if email.read == false %>
            <td class="email-object-<%=email.id%> " id="email-object-<%=email.id%>">
              <%=link_to email_path(email.id), remote: true do %>
                <div class="container h-100 w-100">
                <strong><%=email.object%></strong>
                </div>
              <%end%>
            </td> 
          <%else%>
            <td class="email-object-<%=email.id%> " id="email-object-<%=email.id%>">
              <%=link_to email_path(email.id), remote: true do %>
                <div class="container h-100 w-100">
                  <%=email.object%>
                </div>
              <%end%>
            </td>
          <%end%>
          <td class="email-body-<%=email.id%>" id="email-body-<%=email.id%>"></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>
